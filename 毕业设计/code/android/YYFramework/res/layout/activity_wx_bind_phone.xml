<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/sharp_camera_radius_10"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/wx_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:placeholderImage="@drawable/default_user_icon"
                fresco:roundedCornerRadius="10dp"
                fresco:placeholderImageScaleType="centerCrop"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/wx_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#282828"
            android:textSize="20sp"
            android:text=""/>

        <Button
            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btn_height"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_default_btn"
            android:text="已有账号，去绑定登录"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btn_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/sharp_white_rect_stroke"
            android:text="跳过"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>
</LinearLayout>