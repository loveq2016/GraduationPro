<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/ll_live_baek"
        android:gravity="center"
        android:layout_height="100dp"
        android:layout_width="100dp">
        <ImageView
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_select_live"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-45dp"
        android:background="@drawable/shape_imgpicker_content_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="250dp">
        <TextView
            android:layout_marginTop="15dp"
            android:text="选择组织开启直播"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:id="@+id/dialog_titer"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <View
            android:layout_marginTop="15dp"
            style="@style/line_style"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <app.view.YYListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="@dimen/line_height"/>

            <LinearLayout
                android:id="@+id/notorgcanlive_ll"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="#aa0a0a0a"
                    android:text="暂未有可直播组织"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="只有组织创建人才可以开启直播"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <View
                    android:layout_marginTop="20dp"
                    style="@style/line_style"/>

                <LinearLayout
                    android:id="@+id/creat_org_ll"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageView
                        android:src="@drawable/icon_add"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="#aa0a0a0a"
                        android:text="创建组织"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
