<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/img_picker_alerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/img_picker_alerm"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/img_picker_alerm"
            android:gravity="center"
            android:padding="5dp"
            android:text="相册"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <RelativeLayout
        android:id="@+id/img_picker_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/img_picker_camera"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/img_picker_camera"
            android:gravity="center"
            android:padding="5dp"
            android:text="相机"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>