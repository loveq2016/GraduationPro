<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <ImageButton
        android:id="@+id/open_search_act"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/icon_search_new"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="25dp"
        android:layout_height="25dp">

        <ImageButton
            android:id="@+id/imageButton02"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/popmenu_more" />



        <View
            android:id="@+id/title_point"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right"
            android:background="@drawable/red_point"
            android:visibility="gone" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/aboutMe_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/aboutme_btn"
        android:visibility="gone" />

</LinearLayout>

