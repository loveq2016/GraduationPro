<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:paddingTop="@dimen/applayout_leftorright">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView01"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"
            android:visibility="gone"/>

        <!--app.logic.live.view.RoundAngleSimpleDraweeView-->
        <app.logic.live.view.RoundAngleImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_name_rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView02"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_info_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="@dimen/textSize_18"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_review_qr_code_rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="二维码名片"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView03"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/scan_qr"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_sex_rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView04"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_info_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:minWidth="50dp"
            android:text=""
            android:textSize="@dimen/textSize_18"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_region_rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="地区"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView05"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_info_region_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textSize="@dimen/textSize_18"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_modify_psw_rtl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView06"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/user_info_about_me"
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_item_height"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="@dimen/textSize_18"/>

        <ImageView
            android:id="@+id/rightView07"
            android:layout_width="@dimen/userinfo_item_right_width"
            android:layout_height="@dimen/userinfo_item_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ty_open_duration_btn"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line_bg"/>

    <Button
        android:id="@+id/user_info_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/applayout_leftorright"
        android:layout_marginRight="@dimen/applayout_leftorright"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_userinfo_btn"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textSize_18"/>

</LinearLayout>