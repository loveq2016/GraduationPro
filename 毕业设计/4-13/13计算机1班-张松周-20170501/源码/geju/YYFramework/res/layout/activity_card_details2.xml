<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sv_cardbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_head_iv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/system_mask"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/applayout_leftorright"
                android:paddingRight="@dimen/applayout_leftorright">

                <TextView
                    style="@style/card_item_textview"
                    android:text="姓名"/>

                <EditText
                    android:id="@+id/card_name_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="请输入"
                    android:minWidth="50dp"
                    android:textSize="@dimen/textSize_16"/>
            </RelativeLayout>


        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/applayout_leftorright"/>

        <LinearLayout
            android:id="@+id/phone_add_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height"
                android:paddingLeft="@dimen/applayout_leftorright">

                <ImageView

                    android:id="@+id/iv_phone_add"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_card_add"/>

                <TextView
                    style="@style/card_item_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="手机号"/>
            </RelativeLayout>
            <!--增加phone的代码在这里 -->

        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/applayout_leftorright"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/applayout_leftorright">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="公司信息"
                android:textColor="@color/new_textView_org"
                android:textSize="@dimen/textSize_16"/>

            <EditText
                android:id="@+id/company_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="请输入"
                android:textColor="@color/new_textView_dpm"
                android:textSize="@dimen/textSize_16"/>

            <View
                style="@style/line_style"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height"
                android:paddingLeft="@dimen/applayout_leftorright"
                android:paddingRight="@dimen/applayout_leftorright">

                <TextView
                    style="@style/card_item_textview"
                    android:text="职位"/>

                <EditText
                    android:id="@+id/job_edt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="请输入"
                    android:textColor="@color/new_textView_dpm"
                    android:textSize="@dimen/textSize_16"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/applayout_leftorright"/>

        <LinearLayout
            android:id="@+id/email_add_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height"
                android:paddingLeft="@dimen/applayout_leftorright">

                <ImageView
                    android:id="@+id/email_add_iv"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_card_add"/>

                <TextView
                    style="@style/card_item_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="邮箱"/>
            </RelativeLayout>
            <!--增加email的代码在这里 -->

        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/applayout_leftorright"/>

        <LinearLayout
            android:id="@+id/qq_add_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_height"
                android:paddingLeft="@dimen/applayout_leftorright">

                <ImageView
                    android:id="@+id/qq_add_iv"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_card_add"/>

                <TextView
                    style="@style/card_item_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="QQ"/>
            </RelativeLayout>
            <!--增加qq的代码在这里 -->

        </LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginLeft="@dimen/applayout_leftorright"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/applayout_leftorright">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="备注"
                android:textColor="@color/new_textView_org"
                android:textSize="@dimen/textSize_16"/>

            <EditText
                android:id="@+id/tag_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="请输入"
                android:textColor="@color/new_textView_dpm"
                android:textSize="@dimen/textSize_16"/>

            <View
                style="@style/line_style"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


        <include layout="@layout/footview_card_listview"/>

    </LinearLayout>


</ScrollView>