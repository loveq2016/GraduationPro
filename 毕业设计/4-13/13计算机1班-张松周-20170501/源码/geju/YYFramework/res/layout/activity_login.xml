<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout 
        android:gravity="center|top" 
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="#00ffffff"
        android:orientation="vertical" >
        
			<!-- android:layout_width="275dp"
                 android:layout_height="48dp" -->
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/logo"
             />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/user_bg"
            android:orientation="vertical" >

           
            <EditText
                android:id="@+id/login_account_view"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入用户名"
                android:textColor="#868688"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/login_password_view"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="#868688"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/login_profession_view"
                style="@style/ty_default_spinner"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:paddingLeft="15dp" 
                android:visibility="gone"
                >
                
            </Spinner>

            <CheckBox
                android:id="@+id/login_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_psw"
                android:textColor="#ff6d6d6d" />
        </LinearLayout>
        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ty_btn_login"
            android:text="登录"
            android:textColor="#fffcfcfc"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/login_record_choix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_choix"
            android:textColor="#ff6d6d6d"
            android:textSize="14sp"
            android:visibility="invisible" />
        
        <!-- android:visibility="gone" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	        <EditText 
	            android:id="@+id/shaohui_test_server_edt"
	            android:layout_marginLeft="0dp"
	            android:layout_marginRight="0dp"
	            android:layout_height="wrap_content"
	            android:layout_width ="170dp"
	            android:hint="测试ip"
	            />
	        <Button 
	            android:id="@+id/shaohui_test_server"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="测试主机"
	            />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button 
            android:id="@+id/test_act_view"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:text="测试页面"
            />
        
        <Button 
            android:id="@+id/test_server"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:text="测试服务器"
            />
        
        <Button
            android:id="@+id/product_server"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:text="正式服务器"
            />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>