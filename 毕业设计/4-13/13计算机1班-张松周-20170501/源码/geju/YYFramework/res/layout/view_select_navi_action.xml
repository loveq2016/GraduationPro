<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_imgpicker_content_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/img_drive_navi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="驾车导航"
            android:textColor="@color/new_app_color"
            android:textSize="@dimen/textSize_16" />

        <View style="@style/line_style" />

        <TextView
            android:id="@+id/img_walk_navi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="步行导航"
            android:textColor="@color/new_app_color"
            android:textSize="@dimen/textSize_16" />

        <View style="@style/line_style" />

        <TextView
            android:id="@+id/img_ride_navi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="骑行导航"
            android:textColor="@color/new_app_color"
            android:textSize="@dimen/textSize_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/img_cancel_navi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_imgpicker_content_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/new_app_color"
        android:textSize="@dimen/textSize_16" />

</LinearLayout>