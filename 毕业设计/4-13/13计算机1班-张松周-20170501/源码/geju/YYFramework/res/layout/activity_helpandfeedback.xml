<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/applayout_leftorright" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/applayout_leftorright"
        android:layout_marginStart="@dimen/applayout_leftorright"
        android:text="您有什么意见要对我们说的？"
        android:textColor="#000000"
        android:textSize="@dimen/textSize_16" />

    <EditText
        android:id="@+id/help_content_et"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_search_edt_bg"
        android:gravity="top"
        android:hint="输入您的建议或意见"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginEnd="@dimen/applayout_leftorright"
        android:layout_marginLeft="@dimen/applayout_leftorright"
        android:layout_marginRight="@dimen/applayout_leftorright"
        android:layout_marginStart="@dimen/applayout_leftorright"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_join_org_btn_bg"
        android:text="提交反馈"
        android:textColor="#ffffff"
        android:textSize="@dimen/textSize_18" />

</LinearLayout>