<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.view.ViewPager
            android:id="@+id/launch_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/points_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/point_01"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/point_gray"/>

            <ImageView
                android:id="@+id/point_02"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/point_gray"/>

            <ImageView
                android:id="@+id/point_03"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/point_gray"/>

            <ImageView
                android:id="@+id/point_04"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/point_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/launch_btn_bg"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/shape_launch_btn">

            <Button
                android:id="@+id/launch_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="马上体验"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/textSize_16"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/jpg_act_loading">

    </ImageView>

</FrameLayout>