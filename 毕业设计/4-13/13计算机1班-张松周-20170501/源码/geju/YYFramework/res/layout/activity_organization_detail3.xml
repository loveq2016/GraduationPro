<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/applayout_leftorright"
        android:background="@color/system_mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding_top"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingTop="@dimen/default_padding_top" >

        <ImageView
            android:id="@+id/org_head_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/system_mask"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/org_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="name"
            android:textColor="@color/new_textView_org"
            android:textSize="@dimen/textSize_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/applayout_leftorright"
        android:background="@color/system_mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组织介绍"
            android:textColor="@color/new_textView_org"
            android:textSize="@dimen/textSize_16" />

        <TextView
            android:id="@+id/org_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:text="sadasdsadasdsa"
            android:textColor="@color/new_textView_color"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/applayout_leftorright" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组织介绍"
            android:textColor="@color/new_textView_org"
            android:textSize="@dimen/textSize_16" />
    </LinearLayout>

</LinearLayout>