<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_imgpicker_content_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@color/new_textView_dpm"
        android:textSize="@dimen/textSize_16"/>

    <TextView
        android:id="@+id/dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="content"
        android:textColor="@color/new_textView_dpm"
        android:textSize="@dimen/textSize_16"/>

    <View
        style="@style/line_style"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/centerIv"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/line_bg"/>

        <Button
            android:id="@+id/dialog_true_btn"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/centerIv"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="@color/new_app_color"
            android:textSize="@dimen/textSize_16"/>

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/centerIv"
            android:background="@color/transparent"
            android:text="取消"
            android:textColor="#ff0000"
            android:textSize="@dimen/textSize_16"/>
    </RelativeLayout>

</LinearLayout>