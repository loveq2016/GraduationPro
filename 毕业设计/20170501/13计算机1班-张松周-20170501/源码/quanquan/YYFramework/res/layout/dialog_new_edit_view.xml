<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_imgpicker_content_bg"
              android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:textColor="@color/new_textView_dpm"
        android:textSize="@dimen/textSize_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/applayout_leftorright"
        android:paddingRight="@dimen/applayout_leftorright"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/icon_pen"/>

        <EditText
            android:id="@+id/dialog_content_edt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:textColor="@color/new_textView_dpm"
            android:textSize="@dimen/textSize_16"/>
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_marginLeft="@dimen/textSize_16"
        android:layout_marginRight="@dimen/textSize_16"/>

    <View
        style="@style/line_style"
        android:layout_marginTop="@dimen/textSize_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/centerIv"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/line_bg"/>

        <Button
            android:id="@+id/dialog_true_btn"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/centerIv"
            android:background="@color/transparent"
            android:text="确定"
            android:textColor="@color/new_app_color"
            android:textSize="@dimen/textSize_16"/>

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/centerIv"
            android:background="@color/transparent"
            android:text="取消"
            android:textColor="#ff0000"
            android:textSize="@dimen/textSize_16"/>
    </RelativeLayout>

</LinearLayout>