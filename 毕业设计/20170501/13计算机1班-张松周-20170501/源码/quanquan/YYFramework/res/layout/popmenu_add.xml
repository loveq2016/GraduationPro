<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:background="#fffcfcfc"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/transmit_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/layout_selector"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/menu_scan"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/menu_scan"
            android:text="扫一扫"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/add_friends_ly"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/layout_selector"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/menu_add"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/menu_add"
            android:text="添加好友"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/add_friends_point_iv"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_toRightOf="@id/textView1"
            android:background="@drawable/red_point"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/joid_chatroom_ly"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/layout_selector"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/menu_ccr"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/menu_ccr"
            android:text="发起群聊"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/add_card_ly"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/layout_selector"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/menu_cards"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/menu_cards"
            android:text="名片管理"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/join_org_ly"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/layout_selector"
        android:padding="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/menu_join"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/menu_join"
            android:text="创建组织"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>