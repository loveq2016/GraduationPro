<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffffff" >

    <ImageView
        android:id="@+id/yy_user_headview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/default_user_icon" />

    <LinearLayout
        android:id="@+id/message_cell_center_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/yy_user_headview"
        android:layout_toRightOf="@+id/yy_user_headview"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yy_listview_item_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="dsfsfsf"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yy_listview_item_timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:maxLength="15"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="dsfsfsf"
            android:textColor="#ffc6c6c6"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/message_cell_center_ll"
        android:layout_toRightOf="@+id/message_cell_center_ll" >

        <TextView
            android:id="@+id/yy_listview_item_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:minWidth="30dp"
            android:padding="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/yy_listview_item_open_flag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:textColor="#fffcfcfc" />
    </RelativeLayout>

</RelativeLayout>