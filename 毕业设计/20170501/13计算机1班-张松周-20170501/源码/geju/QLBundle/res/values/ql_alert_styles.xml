<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="ql_alert_text_size">16.0sp</dimen>

    <color name="ql_alert_text_color">@android:color/black</color>

    <style name="ql_alert_progress_message">
        <item name="android:textSize">@dimen/ql_alert_text_size</item>
        <item name="android:textColor">@color/ql_alert_text_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ql_alert_message">
        <item name="android:textSize">@dimen/ql_alert_text_size</item>
        <item name="android:textColor">@color/ql_alert_text_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="ql_alert_button">
        <item name="android:layout_height">45.0dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="ql_alert_button_left" parent="@style/ql_alert_button">
        <item name="android:background">@drawable/ql_alert_dialog_button_left</item>
    </style>

    <style name="ql_alert_button_right" parent="@style/ql_alert_button">
        <item name="android:background">@drawable/ql_alert_dialog_button_right</item>
    </style>

    <style name="ql_alert_button_center" parent="@style/ql_alert_button">
        <item name="android:background">@drawable/ql_alert_dialog_button_center</item>
    </style>

    <style name="ql_alert_button_spacer">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ql_alert_custom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
    </style>

    <style name="ql_alert_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:src">@drawable/ql_alert_dialog_ic_menu_generic</item>
    </style>

    <style name="ql_alert_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Dialog.Alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustUnspecified</item>
    </style>

</resources>