<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffcfcfc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="头像"
            android:textColor="#ff333333" />

        <ImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            android:background="#00000000"
            android:src="@drawable/ty_open_duration_btn" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="昵称"
            android:textColor="#ff333333" />

        <TextView
            android:id="@+id/user_info_nickname_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:textColor="#ff000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <LinearLayout
        android:id="@+id/user_info_review_qr_code"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="名片二维码"
            android:textColor="#ff333333" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:background="#00000000"
            android:src="@drawable/scan_qr" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="性别"
            android:textColor="#ff333333" />

        <TextView
            android:id="@+id/user_info_sex_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:text="男"
            android:textColor="#ff000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="地区"
            android:textColor="#ff333333" />

        <TextView
            android:id="@+id/user_info_region_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:text="广东 广州"
            android:textColor="#ff000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <LinearLayout
        android:id="@+id/user_info_modify_psw"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="修改密码"
            android:textColor="#ff333333" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            android:background="#00000000"
            android:src="@drawable/ty_open_duration_btn" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffc6c6c6" />

    <Button
        android:id="@+id/user_info_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="#ffff0000"
        android:text="退出登录"
        android:textColor="#fffcfcfc"
        android:textSize="16sp" />

</LinearLayout>