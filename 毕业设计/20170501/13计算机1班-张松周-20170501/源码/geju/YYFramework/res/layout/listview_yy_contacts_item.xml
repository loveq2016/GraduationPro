<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#fffcfcfc"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/yy_user_headview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#fffcfcfc"
        android:scaleType="centerCrop"
        android:src="@drawable/default_user_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.82"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/yy_listview_item_nametv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="dsfsfsf"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/yy_listview_item_timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="dsfsfsf"
            android:textColor="#ffc6c6c6"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/yy_listview_item_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.01"
        android:gravity="center_vertical"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/yy_listview_item_open_flag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.01"
        android:padding="5dp"
        android:src="@drawable/ty_open_duration_btn"
        android:visibility="gone" />

</LinearLayout>